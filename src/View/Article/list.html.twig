{% extends 'layout.html.twig' %}
{%block title %}{{ parent() }} - ADMIN Article{% endblock %}
{% block banner %} <div class="banner-admin"></div>{% endblock %}
{% block content %}
<section class="product">
    <!-- Product -->
    <div class="m-t-23 p-b-140">
        <div class="container">
            <!--Search bar-->
            <div class="row d-flex justify-content-center bd-highlight mb-3  search_product_bar">
                <a href="/admin/add" class="add btn btn-success btn-sm m-t-75 f-Shojumaru" name="add" value="add"><i class="fas fa-plus"></i> Ajouter un nouvel article</a>
            </div>
        </div>
    </div>

    <!-- Block2 -->
    <div class="container">
        <div class="row ">
            <div class="col-lg-12 bold cl13 fs-30 d-flex justify-content-center">{{ error.category }} {{ error.toomuch }}</div>
            {% for article in articles %}
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 m-b-35 block-article">
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            {% if article.picture is not empty %}
                                <img src="/assets/images/upload/{{ article.picture }}" alt="Image de l'article {{ article.name }}" class="image-article" >
                            {% else %}
                                <img src="/assets/images/manga.png" alt="image par defaut" class="image-article" >
                            {% endif %}
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a href="/article/{{ article.id }}" class=" cl10 hov-cl1 trans-04  p-b-6 bold title overflow text-capitalize">{{ article.name }}</a>
                                <div class="d-flex flex-row article-price">
                                    <div>
                                        <span class="badge badge-primary badge-price bold badge-admin">{{ article.price }}â‚¬</span>
                                    </div>
                                    <div class="ml-auto">
                                        <span class="badge badge-primary badge-category-admin">{{ article.category }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="/admin/edit/{{ article.id }}"  class="update btn btn-primary btn-sm btn-admin mr-auto" name="update" value="update"><i class="fas fa-pen"></i> Modifier</a>
                    <a href="/admin/list/{{ article.id }}"  onclick="return confirm('Etes vous sur de vouloir supprimer cet article')" class="delete btn btn-danger btn-sm btn-admin btn-G-admin " NAME="supprimer" VALUE="supprimer"><i class="fas fa-trash-alt"></i>  Supprimer</a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}