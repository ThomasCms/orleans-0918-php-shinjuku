<!-- Articles -->
<div class="container">
    <div class="row ">
        <div class="col-lg-12 bold d-flex justify-content-center m-t-50 m-b-100">{{ errors.category }} {{ errors.tooMuch }} {{ errors.notEnough }}
            {% if article is empty %}
                Aucun article ne correspond à votre recherche.
            {% endif %}
        </div>
        {% for article in article %}
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 m-b-35 block-article">
                <div class="block2">
                    <div class="block2-pic hov-img0">
                        {% if article.picture is not empty %}
                            <img src="/assets/images/upload/{{ article.picture }}" alt="Image de l'article {{ article.name }}" class="image-article" >
                        {% else %}
                            <img src="/assets/images/manga.png" alt="image par defaut" class="image-article" >
                        {% endif %}
                    </div>

                    <div class="block2-txt flex-w flex-t p-t-14">
                        <div class="block2-txt-child1 flex-col-l ">
                            <a href="/article/{{ article.id }}" class=" cl10 hov-cl1 trans-04  p-b-6 bold overflow text-capitalize">{{ article.name }}</a>
                            <div class="d-flex flex-row article-price">
                                <div>
                                    <span class="badge badge-primary badge-price bold">{{ article.price }}€</span>
                                </div>
                                {% if category is empty %}
                                    <div class="ml-auto">
                                        <span class="badge badge-primary badge-category">{{ article.category }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
